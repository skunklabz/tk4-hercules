# Test Dockerfile for TKX-Hercules LMS
FROM mcr.microsoft.com/playwright:v1.54.0-noble

# Set working directory
WORKDIR /app

# Set environment variables for the application
ENV NODE_ENV=test
ENV PORT=3000

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production && npm ci --only=dev

# Copy application code
COPY . .

# Create test results directory
RUN mkdir -p test-results coverage

# Expose test results volume
VOLUME ["/app/test-results", "/app/coverage"]

# Default command to run all tests
CMD ["npm", "run", "test:all"] 